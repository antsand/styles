    "body": {
      "header": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "description": "Section heading" },
          "css_class": { "type": "string" },
          "css_style": { "type": "string" }
        }
      },
      "data": {
        "type": "array",
        "description": "Feature items (best with 3 or 6 items)",
        "items": {
          "title": { "type": "string", "description": "Feature name" },
          "description": { "type": "string", "description": "Feature description" },
          "img_src": { "type": "string", "description": "Icon or image path" },
          "sub_heading_1": { "type": "string", "description": "Optional badge text" },
          "sub_heading_2": { "type": "string", "description": "Optional subtitle" },
          "css_class": { "type": "string" },
          "css_style": { "type": "string" },
          "cta": {
            "type": "object",
            "description": "Optional learn more link",
            "properties": {
              "title": { "type": "string" },
              "link": { "type": "string" }
            }
          }
        }
      }
    }
  },


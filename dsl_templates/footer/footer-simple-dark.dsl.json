          "css_styles": { "style": "" },
          "attributes": ""
        }
      },
      "section": {
        "column_count": {
          "count": 4,
          "breakpoint": "tablet",
          "padding": "padding-20-all"
        }
      }
    },

    "data_mapping": {
      "_comment": "This maps to Databoard menu topo - the actual data lives there",
      "source": ["databoard", "menu", "footer_section", "topo"],
      "target": ["data"]
    }
  },


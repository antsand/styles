{
  "template_id": "footer-simple-dark",
  "template_name": "Simple Footer - Dark",
  "category": "footer",
  "description": "Classic dark footer matching the original ANTSAND footer style. Multi-column layout with expandable sections on mobile.",
  "preview_image": "/dsl_templates/footer/footer-simple-dark.png",
  "tags": ["footer", "dark", "classic", "responsive", "mobile-friendly"],
  "version": "1.0",
  "author": "ANTSAND",
  "created": "2025-12-07",

  "volt_template": "/antsand_bootstrap/project/common_views/footer/footer_2.volt",
  "scss_file": "styles_antsand/sass/_footer.scss",

  "schema": {
    "description": "Data structure expected by this template - uses default #default-footer styles",
    "body": {
      "data": {
        "type": "array",
        "description": "Footer columns with links and optional social media",
        "items": {
          "title": { "type": "string" },
          "list": {
            "type": "array",
            "items": { "title": { "type": "string" }, "link": { "type": "string" } }
          },
          "social_media": {
            "type": "array",
            "items": { "icon": { "type": "string" }, "link": { "type": "string" } }
          }
        }
      },
      "footer": {
        "type": "object",
        "properties": {
          "copyright": { "type": "string" }
        }
      }
    }
  },

  "dsl": {
    "name": "Footer - Simple Dark",
    "phalcon_template": "/antsand_bootstrap/project/common_views/footer/footer_2.volt",

    "css": {
      "header": {
        "section": {
          "css_id": "default-footer",
          "css_class": "",

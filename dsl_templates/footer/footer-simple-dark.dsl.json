          "css_styles": { "style": "" },
          "attributes": ""
        },
        "h5": {
          "css_class": "",
          "css_styles": { "style": "" },
          "attributes": ""
        },
        "ul": {
          "css_class": "ul-mobile-padding",
          "css_styles": { "style": "" },
          "attributes": ""
        },
        "li": {
          "css_class": "",
          "css_styles": { "style": "" },
          "attributes": ""
        },
        "social": {
          "css_class": "footer-social-media",
          "css_styles": { "style": "" },

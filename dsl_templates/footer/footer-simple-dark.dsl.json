      },
      "data": {
        "data_container": {
          "css_class": "antsand-container cf",
          "css_styles": { "style": "" },
          "attributes": "",
          "name": "footer-columns"
        },
        "sub_container": {
          "css_class": "padding-20-all-tablet",
          "css_styles": { "style": "" },
          "attributes": ""
        },
        "column": {
          "css_class": "footer-span-small",
          "css_styles": { "style": "" },
